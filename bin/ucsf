#! /usr/bin/env bash
### UCSF Command Line Tools
### 
### Usage:
###  ucsf <tool> ...
### 
### Installed tools:
### {{table_of_tools}}
###
### Example:
###  ucsf vpn --help
###
### Version: 0.2.3
### Copyright: Henrik Bengtsson (2016-2019)
### License: GPL (>= 2.1) [https://www.gnu.org/licenses/gpl.html]

UCSF_DIR=$(dirname "$(readlink -e "$0")")
export UCSF_DIR
export UCSF_TOOLS=true

## Always search the same directory first
PATH="$UCSF_DIR:$PATH"

function mecho {
    >&2 echo "$@"
}

function mcat {
    >&2 cat "$@"
}

function list_tools {
    tools=
    for path in $(echo -e "${PATH//:/\\n}" | sort -u); do
	# shellcheck disable=SC2010,SC2086
	tools="$tools $(ls $path/ucsf-* 2> /dev/null | grep -vE '(^#|~$|#$)' | sed 's|.*/ucsf-||')"
    done
    echo -e "${tools// /\\n}" | sort -u | grep -vE "^$"
}

function whatis {
    local pathname
    pathname="$(command -v "ucsf-$1")"
    local res
    res=$(grep -E "^### whatis: " "$pathname" | sed 's/^### whatis: //')
    if [[ -z "${res}" ]]; then
        res=$(grep -E "^### " "$pathname" | head -1 | sed 's/^### //')
    fi
    echo "$res"
}

function table_of_tools {
    local cmd
    for cmd in $(list_tools); do
        printf " %-8s  %s\\n" "$cmd" "$(whatis "$cmd")"
    done
}

version() {
    grep -E "^###[ ]*Version:[ ]*" "$0" | sed 's/###[ ]*Version:[ ]*//g'
}

help() {
    local t
    t=$(table_of_tools)
    t=${t//$'\n'/\\n}
    grep "^###" "$0" | cut -b 5- | sed "s/{{table_of_tools}}/$t/"
}

main() {
    if [ $# -lt 1 ]; then
        help
        exit 1
    elif [ "$1" == "--help" ]; then
        help
        exit 1
    elif [ "$1" == "--version" ]; then
        version
        exit 1
    elif [ "$1" == "--tools" ]; then
        list_tools
        exit 1
    elif [ "$2" == "--whatis" ]; then
        whatis "$1"
        exit 1
    fi
    
    SUBCOMMAND="$1"; shift
    SUBCMD=$UCSF_DIR/ucsf-$SUBCOMMAND
    if [ ! -e "$SUBCMD" ]; then
        usage
        exit 1
    fi

    $SUBCMD "$@"
}

main "$@"
